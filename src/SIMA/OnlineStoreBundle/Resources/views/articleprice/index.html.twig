{% extends 'SIMAOnlineStoreBundle::backend.html.twig' %}

{% block content %}
    <h1>Articleprices list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Purchaseprice</th>
                <th>Priceht</th>
                <th>Pricettc</th>
                <th>Pricequotation</th>
                <th>Pricediscont</th>
                <th>Offerprice</th>
                <th>Supplier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for articlePrice in articlePrices %}
            <tr>
                <td><a href="{{ path('articleprice_show', { 'id': articlePrice.id }) }}">{{ articlePrice.id }}</a></td>
                <td>{{ articlePrice.purchasePrice }}</td>
                <td>{{ articlePrice.priceHT }}</td>
                <td>{{ articlePrice.priceTTC }}</td>
                <td>{{ articlePrice.priceQuotation }}</td>
                <td>{{ articlePrice.priceDiscont }}</td>
                <td>{{ articlePrice.offerPrice }}</td>
                <td>{{ articlePrice.supplier }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('articleprice_show', { 'id': articlePrice.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('articleprice_edit', { 'id': articlePrice.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('articleprice_new') }}">Create a new articlePrice</a>
        </li>
    </ul>
{% endblock %}
